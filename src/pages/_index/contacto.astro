---
import { Image } from 'astro:assets'
import tedxLogoBlack from '../../assets/logo-black.webp'
import tedxLogoWhite from '../../assets/logo-white.webp'

const props = Astro.props
---

<section class="section section-alternate">
  <h2 class="section-title">Contacto</h2>
  <div class="contact-content">
    <div class="logo-light" style="display: block;">
      <Image src={tedxLogoBlack} alt="TEDx Logo" width={500} />
    </div>
    <div class="logo-dark" style="display: none;">
      <Image src={tedxLogoWhite} alt="TEDx Logo" width={500} />
    </div>
    <div class="contact-email">
      <svg
        style="display: inline-block; margin-right: 0.5rem; vertical-align: middle;"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
      >
        <rect x="2" y="4" width="20" height="16" rx="2"></rect>
        <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
      </svg>
      <a href="mailto:tedxuvalpochile@uv.cl">tedxuvalpochile@uv.cl</a>
    </div>
    <p class="contact-description">Síguenos en nuestras redes sociales para estar al tanto de las últimas novedades</p>
    <div class="social-links">
      <a
        href="https://www.instagram.com/tedx_uvalpochile/"
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
        aria-label="Instagram"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" {...props}
          ><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            ><path d="M4 8a4 4 0 0 1 4-4h8a4 4 0 0 1 4 4v8a4 4 0 0 1-4 4H8a4 4 0 0 1-4-4z"></path><path
              d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0-6 0m7.5-4.5v.01"></path></g
          ></svg
        >
      </a>
      <a
        href="https://www.linkedin.com/groups/15787044/"
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
        aria-label="LinkedIn"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" {...props}
          ><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            ><path d="M8 11v5m0-8v.01M12 16v-5m4 5v-3a2 2 0 1 0-4 0"></path><path
              d="M3 7a4 4 0 0 1 4-4h10a4 4 0 0 1 4 4v10a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4z"></path></g
          ></svg
        >
      </a>
    </div>
  </div>
</section>

<style>
  .contact-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-content .logo-light,
  .contact-content .logo-dark {
    margin-bottom: 2rem;
  }

  .contact-content img {
    max-width: 100%;
    height: auto;
  }

  .tedx-logo-large {
    font-size: 5rem;
    margin-bottom: 2rem;
    letter-spacing: -2px;
  }

  .contact-description {
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .contact-email {
    font-size: 1.3rem;
    margin-bottom: 2rem;
    color: var(--text-secondary);
  }

  .contact-email a {
    color: var(--tedx-red);
    text-decoration: none;
  }

  .contact-email a:hover {
    text-decoration: underline;
  }

  .social-links {
    display: flex;
    gap: 2rem;
    justify-content: center;
    margin-top: 2rem;
  }

  .social-link {
    color: var(--text-primary);
    font-size: 2rem;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    color: var(--tedx-red);
    transform: scale(1.2);
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .contact-content .logo-light img,
    .contact-content .logo-dark img {
      max-width: 80%;
    }

    .contact-email {
      font-size: 1.1rem;
    }

    .social-links {
      gap: 1.5rem;
    }
  }
</style>
